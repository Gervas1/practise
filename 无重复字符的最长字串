class Solution {
    public int lengthOfLongestSubstring(String s) {
       //å¦‚æœsä¸ºç©ºï¼Œlengthä¸å¤§äº0ï¼Œæ˜¯ä¸€ä¸ªç©ºä¸²ï¼Œå°±æ²¡æœ‰å‘ä¸‹æ‰§è¡Œçš„å¿…è¦äº†
        if(s != null && s.length() > 0 && s != ""){
            //String -> char[]
            char[] strChar = s.toCharArray();
            // å­˜å‚¨æœ€é•¿å­—ä¸² key:charå€¼ï¼Œvalue:indexä¸‹æ ‡
            ArrayList<String> maxStr = new ArrayList<>();
            //ä¸´æ—¶çš„å­—ä¸²å­˜å‚¨ç©ºé—´
            ArrayList<String> tempStr = new ArrayList<>();
            //å¾ªç¯
            for(int i=0; i<strChar.length; i++){
                //char -> String
                String str = new String(new char[]{strChar[i]});
                //åˆ¤æ–­stræ˜¯å¦å­˜åœ¨äºtempSträ¸­
                if(tempStr.contains(str)){
                    //å…ˆåˆ¤æ–­tempStrçš„é•¿åº¦æ˜¯å¦å¤§äºç­‰äºmaxStrçš„é•¿åº¦,å¤§äºï¼Œæ‰èƒ½å°†æœ€é•¿å­—ä¸²è¦†ç›–
                    if(tempStr.size() > maxStr.size()){
                        maxStr = new ArrayList<>(tempStr);
                    }
                    //å­˜å‚¨é‡å¤å­—ç¬¦
                    int reIndex = tempStr.indexOf(str);
                    // åˆ é™¤tempSträ¸­çš„é‡å¤å­—èŠ‚åŠå…¶ä¹‹å‰çš„å­—ç¬¦
                    for(int j=0;j<=reIndex;j++){
                        tempStr.remove(0);
                    }
                }
                //å°†å½“å‰å­—ç¬¦å­˜å…¥tempSträ¸­
                tempStr.add(str);
            }
            //æœ€ç»ˆåˆ¤æ–­
            if(tempStr.size() > maxStr.size()){
                maxStr = tempStr;
            }
            //è¿”å›æœ€é•¿å­—ä¸²çš„é•¿åº¦
            return maxStr.size();
        }
        return 0;
    }
}
